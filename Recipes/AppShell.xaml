<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Recipes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Recipes"
    xmlns:pages="clr-namespace:Recipes.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Recipes">


    <FlyoutItem Title="Recipes">
        <ShellContent            
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage"/>
    </FlyoutItem>
    
    <FlyoutItem Title="Read Recipe from QR">
        <ShellContent                       
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="QRPage"/>
    </FlyoutItem>

    <FlyoutItem Title="New Recipe" FlyoutItemIsVisible="False">
        <ShellContent            
            ContentTemplate="{DataTemplate pages:DataControlPage}"
            Route="DataControlPage"/>
    </FlyoutItem>

    <FlyoutItem Title="View Recipe" FlyoutItemIsVisible="False">
        <ShellContent            
            ContentTemplate="{DataTemplate pages:ViewRecipePage}"
            Route="ViewRecipePage"/>
    </FlyoutItem>
    
            

</Shell>
