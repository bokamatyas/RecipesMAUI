<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipes.Pages.ViewRecipePage"
             xmlns:tool="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <ContentPage.Behaviors>
        <tool:StatusBarBehavior StatusBarColor="{x:StaticResource Primary}" StatusBarStyle="LightContent"/>
        <tool:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing"/>
    </ContentPage.Behaviors>
    <ScrollView>
        <Grid RowDefinitions="*,*,*,*,*" Margin="10">
            <HorizontalStackLayout>
                <Button Text="Edit" Command="{Binding EditCommand}"/>
                <Button Text="Delete" Command="{Binding DeleteCommand}"/>
                <Button Text="Share" Command="{Binding ShareCommand}"/>
            </HorizontalStackLayout>
            <Image Source="{Binding RecipeData.ImageUrl}" Grid.Row="1"/>
            <Label Text="{Binding RecipeData.Name}" Grid.Row="2"/>
            <Label Text="{Binding Ingredients}" Grid.Row="3"/>
            <Label Text="{Binding RecipeData.Instructions}" Grid.Row="4"/>
        </Grid>
    </ScrollView>
</ContentPage>